{
  "name": "TidyTabs",
  "description": "AI tab organizer. Groups by category, recency, or frequency using OpenAI, Anthropic, or free Groq.",
  "version": "1.0.27",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "src/service-worker/background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "tabGroups",
    "activeTab",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.groq.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "group-now": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Organize tabs immediately"
    },
    "switch-category": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Switch organization algorithm"
    },
    "toggle-all-groups": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Collapse or expand all tab groups"
    }
  }
}
